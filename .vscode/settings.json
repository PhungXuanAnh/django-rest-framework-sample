{
    "cSpell.words": [
        "Iury",
        "Jcew",
        "Mnsnh",
        "musican",
        "paginations"
    ],
    // Black is the uncompromising Python code formatter. https://github.com/psf/black
    // to test run : black source_folder
    "python.formatting.provider": "black",
    "python.formatting.blackPath": "${workspaceFolder}/.venv/bin/black",
    "python.formatting.blackArgs": ["--line-length", "100"],  // default is 88 characters
    "[python]": {
        "editor.formatOnSave": true,
        "editor.formatOnPaste": true, 
        "editor.formatOnSaveMode": "file"   // modifications
    },
    // NOTE: all these below config can be done by file .vscode/python.env
    // "python.autoComplete.extraPaths": [
    //     "${workspaceFolder}/source"
    // ],
    // "python.analysis.extraPaths": [
    //     "${workspaceFolder}/source"
    // ]
}